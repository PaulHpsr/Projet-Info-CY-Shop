#include <stdio.h>
#include <stdbool.h>
#define FILENAME_SIZE 1024
#define MAX_LINE 30


int ReadLineNbr(int read_line, char nomfile[])
{
  FILE *file;
  int* buff;
  int buffer;
  file = fopen(nomfile,"r");
if(file ==NULL){
  printf("Erreur\n");
}  
bool keep_reading = true;
int current_line =1;
  do
    {
      fscanf(file,"%d",buff);
      if(feof(file)){
        keep_reading = false;
      }
      else if(current_line==read_line){
        keep_reading = false;
        buffer = *buff;
        return buffer;
      }
      current_line++;
    }while(keep_reading);

  fclose(file);

}
